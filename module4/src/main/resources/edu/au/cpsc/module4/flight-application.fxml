<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane
    maxHeight="-Infinity" 
    maxWidth="-Infinity" 
    minHeight="-Infinity" 
    minWidth="800.0" 
    prefHeight="400.0" 
    prefWidth="600.0" 
    xmlns="http://javafx.com/javafx/21" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="edu.au.cpsc.module4.controller.FlightApplicationController"
    >
    <center>
        <fx:include fx:id="flightTableView" source="flight-table-view.fxml" />
    </center>
    <bottom>
        <HBox minHeight="130.0" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>

            <fx:include fx:id="flightDetailView" source="flight-detail-view.fxml" />


                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="4.0">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <children>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateButtonAction"  text="Edit" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>
