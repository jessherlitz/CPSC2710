<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onKeyPressed="#handleDeleteKey" prefHeight="600.0" prefWidth="700.0" stylesheets="@../../../../style/main.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="au.edu.cpsc.module7.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem accelerator="Ctrl+S" onAction="#saveButton" text="Save Note" />
                <MenuItem accelerator="Delete" onAction="#deleteButton" text="Delete Note" />
                <MenuItem accelerator="Ctrl+Q" onAction="#exitApp" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onAboutClick" text="About" />
            </items>
          </Menu>
        </menus>
         <BorderPane.margin>
            <Insets bottom="7.0" />
         </BorderPane.margin>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="100.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="noteTitle" promptText="Insert note title..">
               <VBox.margin>
                  <Insets bottom="17.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin>
            </TextField>
            <TextArea fx:id="noteContent" minHeight="-Infinity" prefHeight="438.0" prefWidth="200.0" promptText="Enter your note here...">
               <VBox.margin>
                  <Insets left="2.0" />
               </VBox.margin>
            </TextArea>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Font size:">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
                  <Slider fx:id="fontSizeSlider" maxWidth="100.0" minWidth="100.0">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Slider>
                  <Label maxWidth="150.0" minWidth="50.0" text="Font color:">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <ColorPicker fx:id="colorPicker" onAction="#colorPickerAction">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="90.0" top="5.0" />
                     </HBox.margin>
                  </ColorPicker>
                  <CheckBox fx:id="archiveCheck" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#archiveCheckBox" text="Archive">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </CheckBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin></HBox>
         </children>
      </VBox>
   </center>
   <left>
      <VBox minWidth="-Infinity" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <Label minHeight="40.0" prefHeight="40.0" text="my notes:">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </VBox.margin>
            </Label>
            <ListView fx:id="notesList" minHeight="-Infinity" prefHeight="439.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin></ListView>
            <ToggleButton fx:id="archiveButton" mnemonicParsing="false" onAction="#toggleArchived" text="Show Archived">
               <VBox.margin>
                  <Insets bottom="5.0" left="27.0" />
               </VBox.margin>
            </ToggleButton>
         </children>
      </VBox>
   </left>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="681.0" BorderPane.alignment="CENTER">
        <buttons>
            <Label prefWidth="250.0" />
          <Button fx:id="saveButtonID" mnemonicParsing="false" onAction="#saveButton" text="Save" />
          <Button layoutX="540.0" layoutY="17.0" mnemonicParsing="false" onAction="#editButton" text="Edit" />
            <Button layoutX="460.0" layoutY="17.0" mnemonicParsing="false" onAction="#deleteButton" text="Delete" />
        </buttons>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" />
   </padding>
</BorderPane>
